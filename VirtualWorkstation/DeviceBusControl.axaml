<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VirtualWorkstation.DeviceBusControl">
    <Grid ColumnDefinitions="*, *">
        <ComboBox Grid.Column="0" Name="ComboBox" SelectionChanged="ComboBox_OnSelectionChanged">
            <ComboBoxItem>Default</ComboBoxItem>
            <ComboBoxItem>ISA</ComboBoxItem>
            <ComboBoxItem>PCI</ComboBoxItem>
            <ComboBoxItem>USB</ComboBoxItem>
            <ComboBoxItem>Custom</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Column="1" Name="TextBox"/>
    </Grid>
</UserControl>
